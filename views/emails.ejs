<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Unread Emails - Outlook Email Assistant</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Unread Emails</h1>
      <div>
        <a href="/" class="btn btn-outline-secondary me-2">Home</a>
        <a href="/auth/logout" class="btn btn-outline-secondary">Sign Out</a>
      </div>
    </div>
    
    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title">Welcome, <%= user.name %></h5>
        <p class="card-text">
          <strong>Email:</strong> <%= user.email %><br>
          <strong>Unread emails:</strong> <%= emails.length %>
        </p>
      </div>
    </div>
    
    <% if (emails.length === 0) { %>
      <div class="alert alert-info">
        You have no unread emails.
      </div>
    <% } else { %>
      <div class="list-group">
        <% emails.forEach(email => { %>
          <a href="/emails/<%= email.id %>" class="list-group-item list-group-item-action">
            <div class="d-flex w-100 justify-content-between">
              <h5 class="mb-1">
                <% if (email.importance === 'high') { %>
                  <i class="bi bi-exclamation-triangle-fill text-danger me-2"></i>
                <% } %>
                <%= email.subject %>
              </h5>
              <small><%= new Date(email.receivedDateTime).toLocaleString() %></small>
            </div>
            <p class="mb-1"><strong>From:</strong> <%= email.from.emailAddress.name %> (<%= email.from.emailAddress.address %>)</p>
            <p class="mb-1 text-truncate"><%= email.bodyPreview %></p>
            <div class="d-flex align-items-center">
              <% if (email.hasAttachments) { %>
                <small class="me-2"><i class="bi bi-paperclip"></i> Has attachments</small>
              <% } %>
              <button class="btn btn-sm btn-outline-secondary mark-read-btn" data-email-id="<%= email.id %>">
                <i class="bi bi-check2"></i> Mark as read
              </button>
            </div>
          </a>
        <% }); %>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Add JavaScript to handle mark as read functionality
    document.querySelectorAll('.mark-read-btn').forEach(button => {
      button.addEventListener('click', async (e) => {
        e.preventDefault();
        e.stopPropagation();
        
        const emailId = button.getAttribute('data-email-id');
        
        try {
          const response = await fetch(`/emails/${emailId}/markRead`, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            }
          });
          
          if (response.ok) {
            // Remove the email from the list
            button.closest('.list-group-item').remove();
          }
        } catch (error) {
          console.error('Error marking email as read:', error);
        }
      });
    });
  </script>
</body>
</html>